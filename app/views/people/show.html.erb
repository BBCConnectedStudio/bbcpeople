<% title(@person.name) %>

<div class="row">
  <div class="span3">
    <%= image_tag(@person.image, :alt => @person.name) %>

    <br><br>
    <div id="tag-container" class="well well-small" style="width: 180px;">
      <canvas width="180" height="200" id="tag-cloud">
        <% @organisations.each do |o| %>
          <%= link_to o.name, o.dbpedia_uri %>
        <% end %>
      </canvas>
    </div>
  </div>
  <div class="span9">
    <h1><%=h @person.name %></h1>
    <p><%=h @person.description %></p>

    <ul class="nav nav-tabs">
      <li class="active"><a href="#read" data-toggle="tab">Read</a></li>
      <li><a href="#listen" data-toggle="tab">Listen</a></li>
      <li><a href="#watch" data-toggle="tab">Watch</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="read">
        <% if @articles.nil? %>
          No relevant reading material.
        <% else %>
          <%= render :partial => 'shared/article', :collection => @articles.take(5) %>
        <% end %>
      </div>
      <div class="tab-pane" id="listen">
        <% if @radio_programmes.nil? %>
          No radio programmes available.
        <% else %>
          <%= render :partial => 'shared/programme', :collection => @radio_programmes.take(5) %>
        <% end %>
      </div>
      <div class="tab-pane" id="watch">
        <% if @tv_programmes.nil? %>
          No TV programmes available.
        <% else %>
          <%= render :partial => 'shared/programme', :collection => @tv_programmes.take(5) %>
        <% end %>
      </div>
    </div>

  </div>
</div>

<hr />
<h2>Related People</h2>

<div class="row-fluid">
  <ul class="thumbnails">
    <% @people.take(4).each do |person| %>
      <li class="span3">
        <div class="thumbnail">
          <%= image_tag(person.image_uri, :alt => person.name) %>
          <div class="caption">
            <h3><%=h person.name %><span class="badge badge-success pull-right"><%= person.cooccurence_count %></span></h3>
            <p class="text-center"><%= link_to('View Details', show_person_path(person.url_key), :class => "btn btn-primary") %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
