<% if @entities.present? %>
  <div class="component">
    <div class="header">
      <h2>Related</h2>
    </div>
    <div class="well">
      <% @entities.each do |entity| %>
        <div style="float:left; width: 55px;">
          <%= link_to image_tag(entity.image, :style => "width:50px; height:50px;"), show_profile_url(entity.url_key) %>
        </div>
        <div style="float:left; width: 420px;">
          <h3 style="font-size: 1.4em;"><%= link_to entity.name, show_profile_url(entity.url_key), :class => 'pull-left' %></h3>
          <div>
            <%= truncate(entity.description, length: 120) %>
          </div>
        </div>
        <div style="clear:both;"></div>
      <% end %>
    </div>
    <div style="clear:both;"></div>
  </div>
<% end %>
