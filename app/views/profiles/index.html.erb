<% title('BBC People') %>

<h1>BBC People</h1>

<% people = Person.where(:name => [
    'David Cameron',
    'Barack Obama',
    'Sarah Palin',
    'Bradley Wiggins',
    'Rupert Murdoch',
    'Andy Murray',
    'Wayne Rooney'
]) %>
<div class="well">
  <% people.each do |person| %>
  <div class="media">
    <%= link_to image_tag(person.image_uri), show_profile_path(person.xpedia_slug), :class => 'pull-left' %>
    <div class="media-body">
      <h3><%= link_to person.name, show_profile_path(person.xpedia_slug), :class => 'pull-left' %></h3>
    </div>
  </div>
  <% end %>
</div>
